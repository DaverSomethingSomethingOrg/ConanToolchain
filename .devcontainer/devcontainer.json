// For format details, see https://aka.ms/devcontainer.json.
{
  "name": "Regular Build Minimal with Docker, Git, Python3",
//  "image": "ghcr.io/daversomethingsomethingorg/conan-ubuntu:aarch64-latest",
  "image": "nexus.homelab/conan-docker-build-ubuntu:aarch64-latest",
//  "image": "ghcr.io/daversomethingsomethingorg/conan-almalinux:aarch64-latest",
//  "image": "nexus.homelab/conan-docker-build-almalinux:aarch64-latest",

// feature support is for ubuntu/debian (uses apt-get, etc) apparently...
/*
  "features": {
    "ghcr.io/devcontainers/features/common-utils:1": {},
    "ghcr.io/devcontainers-contrib/features/mkdocs:2": {
      "plugins": ""
    }
    "ghcr.io/devcontainers/features/docker-from-docker:1": {}
  },
*/

//  "remoteUser": "nobody",

  // Use 'postCreateCommand' to run commands after the container is created.
  "postCreateCommand": "bash .devcontainer/postCreate.sh",

  // Configure tool-specific properties.
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-azuretools.vscode-docker",
        "ms-python.vscode-pylance",
        "DavidAnson.vscode-markdownlint"
      ]
    }
  }
}
